def tower_of_hanoi(n, source, target, auxiliary):
    if n > 0:
        # Pindahkan n-1 cakram dari source ke auxiliary
        tower_of_hanoi(n-1, source, auxiliary, target)
        
        #Pindahkan cakram terbesar dari source ke target
        print(f'Pindahkan cakram {n} dari {source} ke {target}')
        
        #Pindahkan n-1 cakran dari auxiliary ke target
        tower_of_hanoi(n-1, auxiliary, target, source)
        
        #Contoh penggunaan dengan 3 cakram
        tower_of_hanoi(3, 'A', 'C', 'B')
